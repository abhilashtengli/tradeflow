{
  "compilerOptions": {
    "baseUrl": ".", 
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",  // Ensure Node.js module resolution strategy
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@types/*": ["types/*"]  // Correct path for custom types
    }
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts", 
    "app/api/freight/freightForwarder/getAll", 
    "types/types.d.ts"  // Include the correct path for custom types
  ],
  "exclude": [
    "node_modules"
  ]
}
